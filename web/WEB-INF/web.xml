        <servlet-name>UpdateEstado</servlet-name>
        <url-pattern>/aceptar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarClave</servlet-name>
        <url-pattern>/ValidarClave</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
