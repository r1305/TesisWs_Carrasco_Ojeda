    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Afinidad</servlet-name>
        <servlet-class>Servlets.Afinidad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFb</servlet-name>
        <servlet-class>Servlets.LoginFb</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFbId</servlet-name>
        <servlet-class>Servlets.GetFbId</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDatos</servlet-name>
        <servlet-class>Servlets.GetDatos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validate</servlet-name>
        <servlet-class>Servlets.Validate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarViaje</servlet-name>
        <servlet-class>Servlets.RegistrarViaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarCarro</servlet-name>
        <servlet-class>Servlets.RegistrarCarro</servlet-class>
