        <servlet-class>Servlets.ListarViajes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarNotificacion</servlet-name>
        <servlet-class>Servlets.RegistrarNotificacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarSolicitudes</servlet-name>
        <servlet-class>Servlets.ListarSolicitudes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEstado</servlet-name>
        <servlet-class>Servlets.UpdateEstado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarClave</servlet-name>
        <servlet-class>Servlets.ValidarClave</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Afinidad</servlet-name>
        <url-pattern>/afinidad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginFb</servlet-name>
        <url-pattern>/fb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFbId</servlet-name>
        <url-pattern>/getFbId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDatos</servlet-name>
        <url-pattern>/getDatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validate</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarViaje</servlet-name>
        <url-pattern>/viajes</url-pattern>
    </servlet-mapping>
