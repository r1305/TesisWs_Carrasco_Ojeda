<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Afinidad</servlet-name>
        <servlet-class>Servlets.Afinidad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFb</servlet-name>
        <servlet-class>Servlets.LoginFb</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFbId</servlet-name>
        <servlet-class>Servlets.GetFbId</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDatos</servlet-name>
        <servlet-class>Servlets.GetDatos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Afinidad</servlet-name>
        <url-pattern>/afinidad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginFb</servlet-name>
        <url-pattern>/fb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFbId</servlet-name>
        <url-pattern>/getFbId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDatos</servlet-name>
        <url-pattern>/getDatos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
